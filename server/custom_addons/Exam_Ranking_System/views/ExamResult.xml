<odoo>
    <data>
        <!-- ExamResult Form View -->
        <record id="examresult_form_view" model="ir.ui.view">
            <field name="name">examresult.form</field>
            <field name="model">Exam_Ranking_System.examresult</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Exam Result">
                    <header>
                        <button name="compute_ranking" string="Compute Ranking" type="object" class="oe_highlight"/>
                    </header>
                    <group>
                        <field name="exam_id"/>
                        <field name="student_id"/>
                        <field name="marks_obtained"/>
                    </group>
                </form>
            </field>
        </record>
        
        <!-- ExamResult List View -->
        <record id="examresult_list_view" model="ir.ui.view">
            <field name="name">examresult.list</field>
            <field name="model">Exam_Ranking_System.examresult</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <tree string="Exam Results">
                    <field name="exam_id"/>
                    <field name="student_id"/>
                    <field name="marks_obtained"/>
                </tree>
            </field>
        </record>
        
        <!-- ExamResult Kanban View -->
        <record id="examresult_kanban_view" model="ir.ui.view">
            <field name="name">examresult.kanban</field>
            <field name="model">Exam_Ranking_System.examresult</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="exam_id"/>
                    <field name="student_id"/>
                    <field name="marks_obtained"/>
                </kanban>
            </field>
        </record>
        <record id="action_exam" model="ir.actions.act_window">
        <field name="name">ExamResult</field>
        <field name="res_model">Exam_Ranking_System.examresult</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    </data>
</odoo>

